<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTextPrimary" parent="AppText">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="AppTextSecondary" parent="AppText">
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="AppText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="AppEditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>

    <style name="AppImageView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="AppButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppFAB">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppLoginButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/ic_login_background</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppGoogleLoginButton" parent="AppLoginButton">
        <item name="android:paddingStart">12dp</item>
        <item name="drawableStart">@drawable/ic_google_logo</item>
        <item name="android:backgroundTint">@color/colorGoogleAuth</item>
        <item name="android:text">@string/action_continue_with_google</item>
        <item name="android:textColor">@color/common_google_signin_btn_text_light_default</item>
    </style>

    <style name="AppFacebookLoginButton" parent="AppLoginButton">
        <item name="android:paddingStart">12dp</item>
        <item name="drawableStart">@drawable/ic_facebook_logo</item>
        <item name="android:backgroundTint">@color/com_facebook_blue</item>
        <item name="android:text">@string/com_facebook_loginview_log_in_button_continue</item>
    </style>

    <style name="AppItemView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="AppItemData">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppIconLabel" parent="AppImageView">
        <item name="android:src">@drawable/ic_label</item>
        <item name="android:tint">@color/colorSecondaryText</item>
    </style>

    <style name="AppIconTrash" parent="AppImageView">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:src">@drawable/ic_delete</item>
        <item name="android:tint">@color/colorSecondaryText</item>
    </style>

</resources>
